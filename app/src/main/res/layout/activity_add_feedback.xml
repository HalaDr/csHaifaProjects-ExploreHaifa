<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_fedback_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:background="#2E3768"
    android:gravity="right">


    <Button
        android:id="@+id/btn_save_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_feedback"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="290dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:background="#2E3768"
        android:text="שמור"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="24sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/et_feedback_msg"
        android:layout_width="354dp"
        android:layout_height="150dp"
        android:layout_below="@id/ratingbar_add_feedback"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="29dp"
        android:gravity="start|right"
        android:hint="כתוב חוות דעת כאן"
        android:maxLines="5"
        android:textColor="@color/cardview_light_background"
        android:textColorHighlight="@color/design_default_color_on_secondary"
        android:textColorHint="@android:color/darker_gray"
        android:textColorLink="@color/design_default_color_on_secondary"
        android:textSize="24sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/img_feedback"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_below="@id/et_feedback_msg"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="34dp"

        android:layout_marginLeft="34dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="177dp"
        android:background="@drawable/ic_baseline_add_photo_alternate_24"
        android:onClick="onClickAddPhoto" />

    <RatingBar
        android:id="@+id/ratingbar_add_feedback"
        android:layout_width="244dp"
        android:layout_height="62dp"
        android:layout_below="@id/tv_title_add_feedback"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="162dp"
        android:layout_marginLeft="162dp"
        android:layout_marginTop="11dp"
        android:foregroundGravity="right"
        android:scaleX="0.5"
        android:scaleY="0.5" />

    <TextView
        android:id="@+id/tv_title_add_feedback"
        android:layout_width="204dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="168dp"
        android:layout_marginRight="168dp"
        android:gravity="center|right"
        android:text="הוסף חוות דעת"
        android:textColor="#AEEA23"
        android:textSize="24sp"
        android:textStyle="bold" />


</RelativeLayout>
